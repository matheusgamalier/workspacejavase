import java.util.Scanner;

public class NomeIdadeMediaEtc {

	public static void main(String[] args) {
		Scanner t = new Scanner(System.in);
		
		char decisao = 'S';
		String nome = "";
		String nomeMaisVelha = "";
		String nomeMaisNova = "";
		short idade = 0;
		short idadeMaisVelha = 0;
		short idadeMaisNova = 0;
		int qtdePessoas = 0;
		int qtdePessoasMaiores = 0;
		int mediaIdade = 0;
		
		System.out.print("Informe o 1º nome: ");
		nome = t.nextLine().toUpperCase();
		
		System.out.print("Informe a idade do(a) " + nome + ": ");
		idade = t.nextShort();
		
		qtdePessoas++;
		mediaIdade = idade;
		nomeMaisVelha = nome;
		idadeMaisVelha = idade;
		nomeMaisNova = nome;
		idadeMaisNova = idade;
		
		if (idade > 17) {
			qtdePessoasMaiores++;
		}
		
		System.out.println();
		
		System.out.print("Tecle <S> para inserir mais dados ou <N> para obter os resultados: ");
		decisao = t.next().toUpperCase().charAt(0);
		System.out.println();
		
		while (decisao == 'S') {
			System.out.print("Informe o " + (qtdePessoas + 1) + "º nome: ");
			nome = t.nextLine().toUpperCase();
			
			System.out.print("Informe a idade do(a) " + nome + ": ");
			idade = t.nextShort();
			
			qtdePessoas++;
			mediaIdade = (mediaIdade + idade) / qtdePessoas;
			
			if (idade >= idadeMaisVelha) {
				nomeMaisVelha = nome;
				idadeMaisVelha = idade;
			}
			
			if (idade <= idadeMaisNova) {
				nomeMaisNova = nome;
				idadeMaisNova = idade;
			}
			
			if (idade > 17) {
				qtdePessoasMaiores++;
			}
			
			System.out.println();
			
			System.out.print("Tecle <S> para inserir mais dados ou <N> para obter os resultados: ");
			decisao = t.nextLine().toUpperCase().charAt(0);
			
			System.out.println();
		}
		
		System.out.printf("Qtde de pessoas: %d \n", qtdePessoas);
		System.out.printf("Qtde de pessoas maiores: %d \n", qtdePessoas);
		System.out.printf("Média das idades: %d \n", mediaIdade);
		System.out.printf("Pessoa mais velha: %s com %d anos \n", nomeMaisVelha, idadeMaisVelha);
		System.out.printf("Pessoa mais nova : %s com %d anos \n", nomeMaisNova, idadeMaisNova);
		
		
		
		
	}

}
