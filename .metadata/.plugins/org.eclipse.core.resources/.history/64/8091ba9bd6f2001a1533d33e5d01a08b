import java.util.Scanner;

public class DesafioWhile {

	public static void main(String[] args) {
		Scanner t = new Scanner(System.in);
		int ano = 0;
		int mes = 0;
		int dia = 0;		
		
		System.out.print("Informe o ano: ");
		ano = t.nextInt();
		
		while (ano > 2001) {
			System.out.println("Ano deve ser menor que 2002");
			System.out.print("Informe o ano: ");
			ano = t.nextInt();
		}
		
		System.out.println();
		
		System.out.print("Informe o mês: ");
		mes = t.nextInt();
		
		while (mes < 1 || mes > 12) {
			System.out.println("Mês deve ser entre 1 ao 12");
			System.out.print("Informe o mês: ");
			mes = t.nextInt();
		}
		
		System.out.println();
		
		System.out.print("Informe o dia: ");
		dia = t.nextInt();
		
		/*while ( (dia < 1 || dia > 30) && mes == 1)) || 1==1) {
			System.out.println("Dia inválido para o mês: " + mes);
			System.out.print("Informe o dia: ");
			mes = t.nextInt();			
		}*/
		
		 
	}

}
